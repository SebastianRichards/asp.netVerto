<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VertoTest</title>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VertoTest.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/foundation-sites@6.7.5/dist/css/foundation.min.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    
</head>
<body>

    <header>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="all-content"></div>


            <div class="container-fluid">

                <div class="grid-x menuHamburger">
                    <div class="cell small-1 small-offset-10 mobile-cluster">Menu</div>
                    <div class="hamburger cell small-1">

                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
                </div>





                <div class="grid-container grid-x navbar-grid">
                    <a class="navbar-brand cell small-6 padding-12 opticron" asp-area="" asp-controller="Home" asp-action="Index"><img src="/static/opticronLink.png"></a>
                    <a class="cell small-6 padding-12 admin-button" asp-area="" asp-controller="Home" asp-action="AdminView">Admin</a>


                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>



                    <div class="cell medium-12 large-8 navLinks">
                        <div class="grid-x nav-menu">

                            <div class="cell small-12 large-2">
                                <a class="nav-link nav-item" asp-area="" asp-controller="Home" asp-action="OurProducts">Our Products</a>
                            </div>
                            <div class="cell small-12 large-2">
                                <a class="nav-link nav-item" asp-area="" asp-controller="Home" asp-action="WhereToBuy">Where to Buy</a>
                            </div>
                            <div class="cell small-12 large-2">
                                <a class="nav-link nav-item" asp-area="" asp-controller="Home" asp-action="NewsAndReviews">News & Reviews</a>
                            </div>
                            <div class="cell small-12 large-2">
                                <a class="nav-link nav-item" asp-area="" asp-controller="Home" asp-action="Help">Help & Support</a>
                            </div>
                            <div class="cell small-12 large-2">
                                <a class="nav-link nav-item" asp-area="" asp-controller="Home" asp-action="MyOpticron">My Opticron</a>
                            </div>


                        </div>
                    </div>

                    <div class="cell medium-12 large-4 search">
                        <form>
                            <div class="grid-x">
                                <input type="text" placeholder="My Opticron..." class="cell small-7 small-offset-3" />
                                <button type="submit" class="searchbutton"><i class="fa fa-search"></i></button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>




        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="foot grid-x">
            <div class="cell large-6 medium-12 foot-text">
                <div class="footer-opticron"><b>Opticron</b> Unit 12, Titan Court, Laporte Way, Luton, Bedfordshire, LU4 8EF, UK</div>
                <div class="footer-lower">Site map / Terms / Privacy Policy / <b>Site By Verto</b></div>
            </div>
            <div class="cell large-6 medium-12 foot-text">
                <div class="number">call <b>01582 726522</b></div>
                <div><b>email us</b> sales@opticron.co.uk</div>
                <div class="social-row">
                    <div class="socialIcons grid-x grid-container">
                        <div class="small-2 small-offset-2 social-media-icon">
                            <img src="/../static/fb.png" />
                        </div>
                        <div class="small-2 social-media-icon">
                            <img src="/../static/twitter.png" />
                        </div>
                        <div class="small-2 social-media-icon">
                            <img src="/../static/linked.png" />
                        </div>
                        <div class="small-2 social-media-icon">
                            <img src="/../static/you.png" />
                        </div>
                        <div class="small-2 social-media-icon">
                            <img src="/../static/google.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/foundation-sites@6.7.5/dist/js/foundation.min.js" crossorigin="anonymous"></script>

    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

