@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">

    <section>
        <div class="carousel" data-carousel>
            <button class="carousel-button prev" data-carousel-button="prev">&#8701;</button>
            <button class="carousel-button next" data-carousel-button="next">&#8702;</button>
            <ul data-slides>
                <li class="slide" data-active>
                    <img src="/../static/birdbanner3.png" alt="img1" />
                </li>
                <li class="slide">
                    <img src="/../static/birdbanner2.jpeg" alt="img2" />
                </li>
